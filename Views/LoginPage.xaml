<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ITFundManager.Views.LoginPage"
             Title="Đăng nhập">
    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="16">
            <Label Text="Quản lý quỹ CNTT" FontAttributes="Bold" FontSize="24" HorizontalOptions="Center" />
            <Entry Placeholder="Tài khoản" Text="{Binding Username}" />
            <Entry Placeholder="Mật khẩu" Text="{Binding Password}" IsPassword="True" />
            <Button Text="Đăng nhập" Command="{Binding LoginCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
