<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ITFundManager.Views.ExpenseProposalListPage"
    x:Name="Page"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Duyệt đề xuất chi">

    <CollectionView ItemsSource="{Binding Proposals}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Padding="10" Margin="6">
                    <VerticalStackLayout Spacing="6">

                        <Label Text="{Binding Title}"
                               FontAttributes="Bold"
                               FontSize="16"/>

                        <Label Text="{Binding Amount,
                                      StringFormat='Số tiền: {0:N0}'}"/>

                        <HorizontalStackLayout Spacing="10">
                            <Button
                                Text="✅ Duyệt"
                                Command="{Binding Source={x:Reference Page},
                                                  Path=BindingContext.ApproveCommand}"
                                CommandParameter="{Binding .}" />

                            <Button
                                Text="❌ Từ chối"
                                TextColor="Red"
                                Command="{Binding Source={x:Reference Page},
                                                  Path=BindingContext.RejectCommand}"
                                CommandParameter="{Binding .}" />
                        </HorizontalStackLayout>

                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
