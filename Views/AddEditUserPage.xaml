<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ITFundManager.Views.AddEditUserPage"
             Title="Thêm/Sửa người dùng">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">
            <Entry Placeholder="Họ tên" Text="{Binding FullName}" />
            <Entry Placeholder="Tài khoản" Text="{Binding AccountName}" />
            <Entry Placeholder="Email" Text="{Binding Email}" />
            <Entry Placeholder="Số điện thoại" Text="{Binding Phone}" />
            <Entry Placeholder="Chức vụ" Text="{Binding Position}" />
            <Entry Placeholder="Đơn vị" Text="{Binding Department}" />
            <Entry Placeholder="Mật khẩu (mới nếu tạo)" Text="{Binding Password}" IsPassword="True" />
            <Button Text="Lưu" Command="{Binding SaveCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
