<ContentPage
    x:Class="ITFundManager.Views.ExpenseProposalHistoryPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Lịch sử duyệt">

    <CollectionView ItemsSource="{Binding History}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Padding="10" Margin="6">
                    <VerticalStackLayout Spacing="6">

                        <Label Text="{Binding Title}"
                               FontAttributes="Bold"
                               FontSize="16"/>

                        <Label Text="{Binding Amount,
                                      StringFormat='Số tiền: {0:N0}'}"/>

                        <Label Text="{Binding Status}"
                               TextColor="Gray"/>

                        <Label Text="{Binding ApprovedBy,
                                      StringFormat='Người duyệt: {0}'}"/>

                        <Label Text="{Binding ApprovedAt,
                                      StringFormat='Ngày duyệt: {0:dd/MM/yyyy}'}"/>

                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
